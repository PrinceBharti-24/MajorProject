<li id="post-<%= post._id %>">
    <p>
      <% if(locals.user && locals.user.id == post.user.id){%>
        <small>
          <a class="delete-post-btn" href="/posts/destroy/<%= post.id%>">X</a>
        </small>
      <% } %>
      <%= post.content %>
      <br>
      <small>
        <%= post.user.name %>
      </small>

      <br>

      <small>
        <% if (locals.user){ %>
            <a class="toggle-like-button" data-likes="<%= post.likes.length %>" href="/likes/toggle/?id=<%=post._id%>&type=Post">
                    <%= post.likes.length %> Likes
            </a>
        <% }else{ %>
            <%= post.likes.length %> Likes
        <% } %>
    </small>

    </p>
    <div class="post-comments">
      <% if(locals.user){ %>
      <form action="/comments/create" method="post" id="new-comment">
        <input type="text" name="content" placeholder="post a comment.." required />
        <input type="hidden" name="post" value="<%= post._id%>" / required>
        <input type="submit" value="Add comment" />
      </form>
      <% } %>
      <div class="post-comments-list">
        <ul class="post-comments-<%= post._id%>">
          <%for(comment of post.comment){%>
            <%- include('_comment.ejs') -%>
          <%} %>
        </ul>
      </div>
    </div>
  </li>